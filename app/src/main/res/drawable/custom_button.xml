<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="32dip" />
            <stroke android:width="1dip" android:color="#fff" />
            <gradient android:angle="45" android:endColor="#6b394c" android:startColor="#31244e" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="32dip" />
            <stroke android:width="1dip" android:color="#fff" />
            <solid android:color="#fff" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="32dip" />
            <stroke android:width="1dip" android:color="#444" />
            <gradient android:angle="-90" android:endColor="#444" android:startColor="#444" />
        </shape>
    </item>
</selector>