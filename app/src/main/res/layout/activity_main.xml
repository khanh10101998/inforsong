<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bgGradient"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_taskbar">

        <LinearLayout
            android:id="@+id/myWatSongLayout"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"

            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_my_watsong"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My WatSong"
                android:textSize="10sp"
                android:textColor="#fff"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <Button
                android:id="@+id/btn_fragment_history"
                android:layout_width="@dimen/size_button_circle"
                android:layout_height="@dimen/size_button_circle"
                android:background="@drawable/circle_default" />

            <Button
                android:id="@+id/btn_fragment_main"
                android:layout_width="@dimen/size_button_circle"
                android:layout_height="@dimen/size_button_circle"
                android:layout_marginLeft="@dimen/margin_left_button_circle"
                android:background="@drawable/circle_default" />

        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>